<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#EEEEEE"
    android:padding="0dp">
    tools:context="mx.intelisis.maserp.avanti.cliente_c">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF9800"
        android:padding="0dp"/>

    <RelativeLayout
        android:paddingTop="40dp"
        android:id="@+id/contenedorProducto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_alignParentStart="true"
        android:visibility="visible">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardclienten"
            android:elevation="8dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Artlayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:paddingLeft="16sp"
                android:paddingRight="16sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre cliente"
                    android:id="@+id/cliente_title_n"
                    android:textSize="12sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:id="@+id/cliente_n"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direccion "
                    android:id="@+id/direccion_title_n"
                    android:textSize="12sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:id="@+id/direccion_n"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colonia "
                    android:id="@+id/colonia_title_n"
                    android:textSize="12sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:id="@+id/colonia_n"
                    />

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num_int_ext"
                android:layout_alignParentStart="true"
                android:weightSum="3"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NumeroExt.  "
                    android:id="@+id/num_ext_title_n"
                    android:textSize="12sp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:id="@+id/num_ext_n"
                    />

                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero Int. "
                    android:id="@+id/num_int_title_n"
                    android:textSize="12sp"

                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:id="@+id/num_int_n"
                    />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Codigo Postal"
                        android:id="@+id/cpostal_title_n"
                        android:textSize="12sp"

                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint=""
                        android:ems="10"
                        android:textSize="16sp"
                        android:paddingTop="16dp"
                        android:id="@+id/cpostal_n"
                        />
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CardViewArt2"
            android:elevation="8dp"
            android:layout_below="@+id/cardclienten"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Artlayout2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:paddingLeft="16sp"
                android:paddingRight="16sp"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poblacion"
                    android:id="@+id/poblacion_title_n"
                    android:textSize="12sp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:ems="10"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:id="@+id/poblacion_n"
                    />


                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pais_estado"
                    android:layout_alignParentStart="true"
                    android:weightSum="2"
                    >

                    <RelativeLayout
                        android:paddingTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pais"
                            android:id="@+id/pais_title_n"
                            android:textSize="12sp"
                            />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint=""
                            android:ems="10"
                            android:textSize="16sp"
                            android:paddingTop="24dp"
                            android:id="@+id/pais_n"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:paddingTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado "
                            android:id="@+id/estado_title_n"
                            android:textSize="12sp"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint=""
                            android:ems="10"
                            android:textSize="16sp"
                            android:paddingTop="24dp"
                            android:id="@+id/estado_n"
                            />
                    </RelativeLayout>




                </LinearLayout>

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telefonoyrfc"
                    android:layout_alignParentStart="true"
                    android:weightSum="2"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RFC  "
                            android:id="@+id/rfc_title_n"
                            android:textSize="12sp"
                            />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint=""
                            android:ems="10"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:id="@+id/rfc_n"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Telefono  "
                            android:id="@+id/telefono_title_n"
                            android:textSize="12sp"

                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:hint=""
                            android:ems="10"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:id="@+id/telefono_n"
                            />
                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>

    </android.support.v7.widget.CardView>
        <ImageButton

            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/boton_cliente_n"
            android:background="@drawable/oval"
            android:elevation="10dp"
            android:src="@mipmap/icono_mas"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:visibility="visible"
            />

    </RelativeLayout>


</RelativeLayout>



