<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spineryfecha"
        android:layout_alignParentStart="true"
        android:weightSum="1" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".1">

    <TextView
        android:paddingTop="24dp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/nombre_select"
        android:textSize="16sp"
        android:textColor="#EF6C00"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/precios"
        android:layout_alignParentStart="true"
        android:weightSum="3"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/importe_select"
        android:textSize="14sp"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cantidad_select"
        android:textSize="14sp"
        android:layout_alignParentStart="true"
        android:layout_weight="1"/>

     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_select"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_weight="1"/>

      </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sucursal_dis"
        android:textSize="14sp"
        android:layout_below="@+id/precios"
        android:layout_alignParentStart="true"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingBottom="24dp"/>
    </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_boton"
            android:src="@drawable/infocarrito"
            android:layout_weight=".9"
            android:background="#FAFAFA"
            android:layout_gravity="center"
            android:shape="oval"
            />
    </LinearLayout>

</LinearLayout>